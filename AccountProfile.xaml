<UserControl  x:Class="VRCHub.AccountProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VRCHub"
             mc:Ignorable="d" Width="200" Height="100">
    <Border x:Name="BorderColor" BorderBrush="Red" BorderThickness="1" CornerRadius="12,12,12,12" >
        <Border CornerRadius="12" BorderBrush="Black" BorderThickness="2" >
            <Grid VerticalAlignment="Center" Height="101" Margin="0,0,0,0">
                <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="194"/>
                <Rectangle HorizontalAlignment="Left" Height="1" Margin="11,25,0,0" Stroke="Red" VerticalAlignment="Top" Width="140" Fill="Red"/>
                <Label x:Name="Username" Content="[UserContent:UserName]" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="150" Margin="5,6,0,0" FontSize="11" Foreground="White" RenderTransformOrigin="0.5,0.5"/>
            </Grid>
        </Border>
    </Border>
</UserControl>
